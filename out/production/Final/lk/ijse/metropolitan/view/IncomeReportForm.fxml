<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="paneReport" prefHeight="722.0" prefWidth="1166.0" styleClass="backgroundcolor"
            stylesheets="@../assets/cssSheets/MetropolitantColourSchema.css" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.metropolitan.controller.IncomeReportFormController">
    <children>
        <Label layoutX="400.0" layoutY="33.0" text="INCOME REPORT" textAlignment="CENTER" textFill="WHITE"
               underline="true">
            <font>
                <Font name="Arial Black" size="40.0"/>
            </font>
            <stylesheets>
                <URL value="@../assets/cssSheets/MetropolitantColourSchema.css"/>
                <URL value="@../assets/cssSheets/style.css"/>
            </stylesheets>
            <styleClass>
                <String fx:value="borderRadious"/>
                <String fx:value="topPaneBackgroundcolor"/>
            </styleClass>
        </Label>
        <Button fx:id="btnDaily" layoutX="138.0" layoutY="285.0" mnemonicParsing="false" onAction="#dailyReportOnAction"
                prefHeight="145.0" prefWidth="152.0" text="DAILY" textFill="WHITE">
            <styleClass>
                <String fx:value="my-btn-class"/>
                <String fx:value="textField"/>
            </styleClass>
            <font>
                <Font name="Arial Black" size="20.0"/>
            </font>
        </Button>
        <Button fx:id="btnYearly" layoutX="860.0" layoutY="286.0" mnemonicParsing="false"
                onAction="#yearyReportOnAction" prefHeight="145.0" prefWidth="152.0" text="YEARLY" textFill="WHITE">
            <styleClass>
                <String fx:value="my-btn-class"/>
                <String fx:value="textField"/>
            </styleClass>
            <font>
                <Font name="Arial Black" size="20.0"/>
            </font>
        </Button>
        <Button fx:id="btnMonthly" layoutX="510.0" layoutY="287.0" mnemonicParsing="false"
                onAction="#monthlyReportOnAction" prefHeight="145.0" prefWidth="152.0" text="MONTHLY" textFill="WHITE">
            <styleClass>
                <String fx:value="my-btn-class"/>
                <String fx:value="textField"/>
            </styleClass>
            <font>
                <Font name="Arial Black" size="20.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
